<div class="container-fluid">
  <div class="form-area">
    <div class="row container", style="background-color: #AAB3AB;">
      <div class="row">
        <h3 class="col-md-8">Customer info:</h3> 
      </div>
      <div class="row">
        <div class="col-md-4">
          <label>Email:</label>
          
        </div>
        <div class="col-md-4">
          <label>Address:</label>
          
        </div>
        <div class="col-md-4">
          <label>Phone number:</label>
          
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
