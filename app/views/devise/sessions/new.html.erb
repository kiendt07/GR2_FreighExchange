<div id="float-panel">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "example@mail.etc" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "p@ssword" %>
  </div>
  <% if devise_mapping.rememberable? -%>
  <div class="form-group">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-default" %>
  </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
